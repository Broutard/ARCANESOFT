{
    "name":        "arcanesoft/arcanesoft",
    "description": "ARCANESOFT - CMS built with Laravel Framework.",
    "keywords":    ["arcanedev", "arcanesoft", "cms", "framework", "laravel"],
    "homepage":    "https://github.com/ARCANESOFT/ARCANESOFT",
    "license":     "MIT",
    "type":        "project",
    "authors":     [
        {
            "name":     "ARCANEDEV",
            "email":    "arcanedev.maroc@gmail.com",
            "homepage": "https://github.com/arcanedev-maroc",
            "role":     "Developer"
        }
    ],
    "require": {
        "php": ">=5.6.4",
        "arcanedev/composer": "~1.4",
        "arcanedev/laravel-html": "~5.4",
        "arcanedev/laravel-markdown": "~1.2",
        "arcanesoft/auth": "~2.0",
        "arcanesoft/blog": "~2.0",
        "arcanesoft/foundation": "~2.0",
        "arcanesoft/media": "~2.0",
        "arcanesoft/seo": "~2.0",
        "arcanesoft/tracker": "~2.0",
        "laravel/framework": "~5.4.0",
        "laravel/tinker": "~1.0"
    },
    "require-dev": {
        "fzaninotto/faker":            "~1.4",
        "mockery/mockery":             "~0.9.0",
        "phpunit/phpcov":              "~3.0",
        "phpunit/phpunit":             "~5.7",
        "barryvdh/laravel-ide-helper": "~2.2",
        "barryvdh/laravel-debugbar":   "~2.2",
        "filp/whoops":                 "~2.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "classmap": ["database"]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan optimize"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "merge-plugin": {
            "include": ["modules/*/composer.json"]
        }
    },
    "suggest": {
        "arcanedev/laravel-lang": "Translations manager and checker for Laravel 5 based on 'caouecs/Laravel-lang' translations."
    }
}
